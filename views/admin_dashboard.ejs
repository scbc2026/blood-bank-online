<!DOCTYPE html>
<html>
<head>
    <title>Admin Control Room</title>
    <style>
        body { font-family: 'Segoe UI', sans-serif; padding: 20px; background: #f4f6f9; color: #333; }
        
        /* Header Style */
        .header { background: white; padding: 20px; border-radius: 8px; box-shadow: 0 2px 5px rgba(0,0,0,0.05); display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px; }
        .btn-work { background: #d9534f; color: white; padding: 10px 20px; text-decoration: none; border-radius: 5px; font-weight: bold; transition: 0.3s; }
        .btn-work:hover { background: #c9302c; }

        /* Stats Cards */
        .stats-container { display: flex; gap: 20px; flex-wrap: wrap; }
        .card { background: white; padding: 20px; border-radius: 8px; flex: 1; min-width: 250px; text-align: center; box-shadow: 0 2px 5px rgba(0,0,0,0.05); border-bottom: 4px solid #ddd; }
        .number { font-size: 40px; font-weight: bold; color: #333; margin: 10px 0; }
        
        /* Table Sections */
        .table-section { margin-top: 30px; background: white; padding: 25px; border-radius: 8px; box-shadow: 0 2px 5px rgba(0,0,0,0.05); }
        table { width: 100%; border-collapse: collapse; margin-top: 15px; }
        th, td { border: 1px solid #ddd; padding: 12px; text-align: left; }
        th { background-color: #f8f9fa; font-weight: 600; }
        
        /* Buttons */
        .btn-approve { background: #28a745; color: white; padding: 5px 10px; text-decoration: none; border-radius: 4px; font-size: 12px; }
        .btn-delete { background: #dc3545; color: white; padding: 5px 10px; text-decoration: none; border-radius: 4px; font-size: 12px; }
        
        /* Upload Section Style */
        .upload-box { border: 2px dashed #28a745; background: #f0fff4; padding: 20px; border-radius: 8px; display: flex; align-items: center; justify-content: space-between; flex-wrap: wrap; }
        .upload-btn { background: #28a745; color: white; border: none; padding: 10px 20px; border-radius: 5px; cursor: pointer; font-weight: bold; font-size: 14px; }
        .upload-btn:hover { background: #218838; }
    </style>
</head>
<body>

    <div class="header">
        <h2>üëÆ‚Äç‚ôÇÔ∏è Admin Dashboard</h2>
        <div>
            <a href="/dashboard" class="btn-work">üîç Go to Donor Search & Entry</a>
            <a href="/logout" style="margin-left: 15px; color: red; text-decoration: none; font-weight: bold;">Logout</a>
        </div>
    </div>

    <div class="stats-container">
        <div class="card" style="border-bottom-color: #f39c12;">
            <h3>Total Donors</h3>
            <div class="number"><%= totalDonors %></div>
        </div>
        
        <a href="/all-records" class="card" style="text-decoration: none; color: inherit; border-bottom-color: #3498db;">
            <h3 style="margin:0; font-size: 18px; color: #777;">Total Donations</h3>
            <div class="number" style="font-size: 40px; font-weight: bold; color: #2c3e50;"><%= totalDonations %></div>
            <div style="font-size:12px; color:#3498db; margin-top:5px;">Click to View Full List &rarr;</div>
        </a>

        <div class="card" style="border-bottom-color: #e74c3c;">
            <h3>Pending Staff</h3>
            <div class="number" style="color: #e74c3c;"><%= pendingStaff.length %></div>
        </div>
    </div>

    <div class="table-section">
        <h3 style="color: #28a745; margin-bottom: 15px;">üì§ Bulk Upload Old Data (Import Excel/CSV)</h3>
        
        <div class="upload-box">
            <div>
                <p style="margin: 0 0 5px 0; font-weight: bold;">Select CSV File:</p>
                <form action="/import-data" method="POST" enctype="multipart/form-data">
                    <input type="file" name="file" accept=".csv" required style="padding: 5px; background: white; border: 1px solid #ccc; border-radius: 4px;">
                    <button type="submit" class="upload-btn">Upload & Process</button>
                </form>
            </div>
            <div style="font-size: 13px; color: #555; max-width: 400px;">
                <strong>‚ö†Ô∏è Format Requirement:</strong><br>
                Ensure your CSV has headers: <em>Name, Mobile, Aadhaar, BloodGroup, Address, Date</em>.<br>
                (Date format: YYYY-MM-DD)
            </div>
        </div>
    </div>

    <% if(pendingStaff.length > 0) { %>
    <div class="table-section" style="border-top: 4px solid orange;">
        <h3 style="color: orange;">‚ö†Ô∏è Pending Staff Requests</h3>
        <table>
            <tr>
                <th>Username</th>
                <th>Role</th>
                <th>Action</th>
            </tr>
            <% pendingStaff.forEach(user => { %>
            <tr>
                <td><%= user.username %></td>
                <td>Staff</td>
                <td>
                    <a href="/verify-staff/<%= user._id %>" class="btn-approve">‚úÖ Approve</a>
                    <a href="/delete-user/<%= user._id %>" class="btn-delete">‚ùå Reject</a>
                </td>
            </tr>
            <% }) %>
        </table>
    </div>
    <% } %>

    <div class="table-section">
        <h3>üë• All Registered Staff</h3>
        <table>
            <tr>
                <th>Username</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
            <% allStaff.forEach(user => { %>
            <tr>
                <td><%= user.username %></td>
                <td>
                    <% if(user.isVerified) { %> 
                        <span style="color:green; font-weight:bold;">Active</span> 
                    <% } else { %> 
                        <span style="color:red; font-weight:bold;">Pending</span> 
                    <% } %>
                </td>
                <td>
                    <a href="/delete-user/<%= user._id %>" style="color: red; font-weight:bold;">üóë Remove</a>
                </td>
            </tr>
            <% }) %>
        </table>
    </div>

</body>
</html>
