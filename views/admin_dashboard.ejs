<!DOCTYPE html>
<html>
<head>
    <title>Admin Control Room</title>
    <style>
        body { font-family: sans-serif; padding: 20px; background: #f4f6f9; }
        .header { background: white; padding: 20px; border-radius: 8px; box-shadow: 0 2px 5px rgba(0,0,0,0.05); display: flex; justify-content: space-between; align-items: center; }
        .btn-work { background: #d9534f; color: white; padding: 10px 20px; text-decoration: none; border-radius: 5px; font-weight: bold; }
        
        .stats-container { display: flex; gap: 20px; margin-top: 20px; }
        .card { background: white; padding: 20px; border-radius: 8px; width: 30%; text-align: center; box-shadow: 0 2px 5px rgba(0,0,0,0.05); }
        .number { font-size: 40px; font-weight: bold; color: #333; margin: 10px 0; }
        
        .table-section { margin-top: 30px; background: white; padding: 20px; border-radius: 8px; }
        table { width: 100%; border-collapse: collapse; margin-top: 15px; }
        th, td { border: 1px solid #ddd; padding: 10px; text-align: left; }
        th { background-color: #f2f2f2; }
        .btn-approve { background: green; color: white; padding: 5px 10px; text-decoration: none; border-radius: 4px; font-size: 12px; }
        .btn-delete { background: red; color: white; padding: 5px 10px; text-decoration: none; border-radius: 4px; font-size: 12px; }
    </style>
</head>
<body>

    <div class="header">
        <h2>üëÆ‚Äç‚ôÇÔ∏è Admin Dashboard</h2>
        <div>
            <a href="/dashboard" class="btn-work">üîç Go to Donor Registration</a>
            <a href="/logout" style="margin-left: 10px; color: red;">Logout</a>
        </div>
    </div>

    <div class="stats-container">
        <div class="card">
            <h3>Total Donors</h3>
            <div class="number"><%= totalDonors %></div>
        </div>
       <a href="/all-records" class="card" style="text-decoration: none; color: inherit; border-bottom: 5px solid #3498db;">
    <h3 style="margin:0; font-size: 18px; color: #777;">Total Donations</h3>
    <div class="number" style="font-size: 40px; font-weight: bold; color: #2c3e50;"><%= totalDonations %></div>
    <div style="font-size:12px; color:blue; margin-top:5px;">Click to View List &rarr;</div>
</a>
        <div class="card">
            <h3>Pending Staff</h3>
            <div class="number" style="color: red;"><%= pendingStaff.length %></div>
        </div>
    </div>

    <% if(pendingStaff.length > 0) { %>
    <div class="table-section" style="border: 2px solid orange;">
        <h3 style="color: orange;">‚ö†Ô∏è Pending Staff Requests</h3>
        <table>
            <tr>
                <th>Username</th>
                <th>Role</th>
                <th>Action</th>
            </tr>
            <% pendingStaff.forEach(user => { %>
            <tr>
                <td><%= user.username %></td>
                <td>Staff</td>
                <td>
                    <a href="/verify-staff/<%= user._id %>" class="btn-approve">‚úÖ Approve</a>
                    <a href="/delete-user/<%= user._id %>" class="btn-delete">‚ùå Reject</a>
                </td>
            </tr>
            <% }) %>
        </table>
    </div>
    <% } %>

    <div class="table-section">
        <h3>üë• All Registered Staff</h3>
        <table>
            <tr>
                <th>Username</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
            <% allStaff.forEach(user => { %>
            <tr>
                <td><%= user.username %></td>
                <td>
                    <% if(user.isVerified) { %> <span style="color:green">Active</span> <% } else { %> <span style="color:red">Pending</span> <% } %>
                </td>
                <td>
                    <a href="/delete-user/<%= user._id %>" style="color: red;">Remove</a>
                </td>
            </tr>
            <% }) %>
        </table>
    </div>

</body>
</html>